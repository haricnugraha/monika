{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "custom_types"],
    "lib": ["ES2021.String"],
    "composite": true,
    "moduleResolution": "node16"
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "../packages/notification/**/*",
    "src/symon/worker.ts"
  ],
  "exclude": ["node_modules"]
}
